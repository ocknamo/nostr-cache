{
  "name": "@nostr-cache/server",
  "version": "0.1.0",
  "description": "Server-side implementation for Nostr cache (planned)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "test": "jest",
    "format": "biome format --write ./src && biome check --apply ./src",
    "format:check": "biome check ./src",
    "lint": "biome check ./src",
    "lint:fix": "biome check --apply ./src",
    "fix": "npm run lint:fix && npm run format"
  },
  "dependencies": {
    "@nostr-cache/cache-lib": "^0.1.0",
    "@nostr-cache/shared": "^0.1.0",
    "@nostr-cache/types": "^0.1.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  }
}
