{
  "name": "nostr-cache",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "npm run format --workspace=packages/web-client",
    "format:check": "npm run format:check --workspace=packages/web-client",
    "build:cache-relay": "npm run build --workspace=packages/cache-relay",
    "build:web-client": "npm run build --workspace=packages/web-client",
    "dev:web-client": "npm run start --workspace=packages/web-client"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "eslint": "^8.0.0"
  }
}
